<!-- views/products.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
</head>
<body>
  <h1>Product List</h1>
  <ul>
    <% products.forEach(product => { %>
      <li>
        <h3><%= product.title %></h3>
        <p><%= product.description %></p>
        <p>Price: $<%= product.price %></p>
        <!-- Add more details as needed -->
      </li>
    <% }); %>
  </ul>
</body>
</html>
